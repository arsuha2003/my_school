<%= form_with model: @grade_level, local: true do |form| %>

  <% if @grade_level.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@grade_level.errors.count, "error") %> prohibited
        this grade_level from being saved:
      </h2>
      <ul>
        <% @grade_level.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class = "form-group">
    <%= form.label :level %><br>
    <%= form.text_field :level, class: "form-control" %>
  </div>

  <div class = 'form-group'>
    <%= form.label :subject_ids %><br>
    <%= collection_select(:grade_level, :subject_ids, Subject.ordered, :id, :name, {}, { class: 'form-control', multiple: true, size: 10}) %>
  </div>

  <div class = 'form-group'>
    <%= form.label :teacher_ids %><br>
    <%= collection_select(:grade_level, :teacher_ids, Teacher.ordered, :id, :snils, {}, { class: 'form-control', multiple: true, size: 11}) %>
  </div>

  <div class = "form-group">
    <%= form.submit t('actions.save'), class: "btn btn-primary" %>
    <%= link_to t('actions.back'), :back, class: "btn btn-default" %>
  </div>

<% end %>