<% if @grade_level %>
  <h1><%= Grade.model_name.human(count: 2) %> <%= @grade_level.level %></h1>
<% else %>
  <h1><%= Grade.model_name.human(count: 2) %></h1>
<% end %>
<div class="form-group">
  <%= link_to t('actions.create'), new_grade_path, class: "btn btn-primary" %>
</div>
<table class="table table-striped table-hover">
  <tr>
    <th>Id</th>
    <th><%= Grade.human_attribute_name(:name) %></th>
    <th colspan="3"></th>
  </tr>

  <% @grades.each do |grade| %>
    <tr>
      <td><%= grade.id %></td>
      <td><%= grade.name %></td>
      <td><%= link_to '', grade_path(grade), class: "glyphicon glyphicon-eye-open", title: t('actions.view')  %></td>
      <td><%= link_to '', edit_grade_path(grade), class: "glyphicon glyphicon-pencil", title: t('actions.edit') %></td>
      <td><%= link_to '', grade_path(grade), class: "glyphicon glyphicon-trash", title: t('actions.delete'),

        method: :delete,
        data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  <tr>
    <td colspan="5">
      <%= paginate @grades %>
    </td>
  </tr>
</table>

