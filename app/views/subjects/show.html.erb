<p>
  <strong><%= Subject.model_name.human(count: 1) %>:</strong>
  <%= @subject.name %>
</p>
<p>
  <strong><%= GradeLevel.model_name.human(count: 2) %>:</strong>
    <ul>
    <%  @subject.grade_levels.each do |grade_level| %>
      <li><%= link_to grade_level.level, grade_level %></li>
    <% end %>
  </ul>
</p>
<p>
  <strong><%= Teacher.model_name.human(count: 2) %>:</strong>
  <ul>
    <%  @subject.teachers.each do |teacher| %>
      <li><%= link_to teacher.user.full_name, teacher %></li>
    <% end %>
  </ul>
</p>

<div class="form-group">
  <%= link_to t('actions.back'), subjects_path, class: "btn btn-default" %>
  <%= link_to t('actions.edit'), edit_subject_path(@subject), class: "btn btn-default" %>
</div>
