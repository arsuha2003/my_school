<h1><%= Subject.model_name.human(count: 2) %></h1>
<div class="form-group">
  <%= link_to t('actions.create'), new_subject_path, class: "btn btn-primary" %>
</div>
<table class="table table-striped table-hover">
  <tr>
    <th>Id</th>
    <th><%= Subject.human_attribute_name(:name) %></th>
    <th colspan="3"></th>
  </tr>

  <% @subjects.each do |subject| %>
    <tr>
      <td><%= subject.id %></td>
      <td><%= subject.name %></td>
      <td><%= link_to '', subject_path(subject), class: "glyphicon glyphicon-eye-open", title: t('actions.view')  %></td>
      <td><%= link_to '', edit_subject_path(subject), class: "glyphicon glyphicon-pencil", title: t('actions.edit') %></td>
      <td><%= link_to '', subject_path(subject), class: "glyphicon glyphicon-trash", title: t('actions.delete'),

        method: :delete,
        data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
