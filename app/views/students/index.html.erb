<h1><%= Student.model_name.human(count: 2) %></h1>
<div class="form-group">
  <%= link_to t('actions.create'), new_student_path, class: "btn btn-primary" %>
</div>
<table class="table table-striped table-hover">
  <tr>
    <th>Id</th>
    <th><%= Student.human_attribute_name(:user_id) %></th>
    <th><%= Grade.model_name.human(count: 2) %></th>
    <th><%= Student.human_attribute_name(:code) %></th>
    <th colspan="3"></th>
  </tr>

  <% @students.each do |student| %>
    <tr>
      <td><%= student.id %></td>
      <td><%= student.user.full_name %></td>
      <td><%= student.grade.name %></td>
      <td><%= student.code %></td>
      <td><%= link_to '', student_path(student), class: "glyphicon glyphicon-eye-open", title: t('actions.view')  %></td>
      <td><%= link_to '', edit_student_path(student), class: "glyphicon glyphicon-pencil", title: t('actions.edit') %></td>
      <td><%= link_to '', student_path(student), class: "glyphicon glyphicon-trash", title: t('actions.delete'),

        method: :delete,
        data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  <tr>
    <td colspan="7">
      <%= paginate @students %>
    </td>
  </tr>
</table>

