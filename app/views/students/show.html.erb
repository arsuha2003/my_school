<p>
  <strong><%= Student.model_name.human(count: 1) %></strong>
  <table class="table table-striped table-hover">
    <tr>
      <td><%= Student.human_attribute_name(:code) %></td>
      <td><%= @student.code %></td>
    </tr> 
  </table>
</p>
<p>
  <strong><%= Parent.model_name.human(count: 2) %>:</strong>
  <ul>
    <%  @student.parents.each do |parent| %>
      <li><%= link_to parent.user.full_name, parent %></li>
    <% end %>
  </ul>
</p>
<div class="form-group">
  <%= link_to t('actions.back'), students_path, class: "btn btn-default" %>
  <%= link_to t('actions.edit'), edit_student_path(@student), class: "btn btn-default" %>
</div>