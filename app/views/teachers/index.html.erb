<h1><%= Teacher.model_name.human(count: 2) %></h1>
<div class="form-group">
  <%= link_to t('actions.create'), new_teacher_path, class: "btn btn-primary" %>
</div>
<table class="table table-striped table-hover">
  <tr>
    <th>Id</th> 
    <th><%= User.human_attribute_name(:full_name) %></th>
    <th><%= Teacher.human_attribute_name(:user_id) %></th>
    <th><%= Teacher.human_attribute_name(:snils) %></th>
    <th colspan="3"></th>
  </tr>

  <% @teachers.each do |teacher| %>
    <tr>
      <td><%= teacher.id %></td>
      <td><%= teacher.user.full_name %></td>
      <td><%= link_to teacher.user.id, user_path(teacher.user) %></td>
      <td><%= teacher.snils %></td>
      <td><%= link_to '', teacher_path(teacher), class: "glyphicon glyphicon-eye-open", title: t('actions.view')  %></td>
      <td><%= link_to '', edit_teacher_path(teacher), class: "glyphicon glyphicon-pencil", title: t('actions.edit') %></td>
      <td><%= link_to '', teacher_path(teacher), class: "glyphicon glyphicon-trash", title: t('actions.delete'),

        method: :delete,
        data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  <tr>
    <td colspan="5">
      <%= paginate @teachers %>
    </td>
  </tr>
</table>

