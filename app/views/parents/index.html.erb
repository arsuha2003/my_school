<h1><%= Parent.model_name.human(count: 2) %></h1>
<div class="form-group">
  <%= link_to t('actions.create'), new_parent_path, class: "btn btn-primary" %>
</div>
<table class="table table-striped table-hover">
  <tr>
    <th>Id</th>
    <th><%= User.model_name.human(count: 1) %></th>
    <th><%= Parent.human_attribute_name(:parent_style) %></th>
    <th colspan="3"></th>
  </tr>

  <% @parents.each do |parent| %>
    <tr>
      <td><%= parent.id %></td>
      <td><%= parent.user.full_name %></td>
      <td><%= parent.parent_style %></td>
      <td><%= link_to '', parent_path(parent), class: "glyphicon glyphicon-eye-open", title: t('actions.view')  %></td>
      <td><%= link_to '', edit_parent_path(parent), class: "glyphicon glyphicon-pencil", title: t('actions.edit') %></td>
      <td><%= link_to '', parent_path(parent), class: "glyphicon glyphicon-trash", title: t('actions.delete'),

        method: :delete,
        data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  <tr>
    <td colspan="7">
      <%= paginate @parents %>
    </td>
  </tr>
</table>

